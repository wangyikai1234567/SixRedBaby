<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_marginTop="50dp"
        android:layout_marginLeft="70dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/iv_frag_baby_boy"
        android:background="@mipmap/guide_gather_prince"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_frag_baby_boy_animator"
        android:layout_alignTop="@+id/iv_frag_baby_boy"
        android:layout_alignLeft="@+id/iv_frag_baby_boy"
        android:background="@mipmap/guide_gather_chosen_light"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_frag_baby_boy_check"
        android:background="@mipmap/guide_gather_checked"
        android:layout_alignBottom="@+id/iv_frag_baby_boy"
        android:layout_alignRight="@+id/iv_frag_baby_boy"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginTop="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="70dp"
        android:id="@+id/iv_frag_baby_girl"
        android:background="@mipmap/guide_gather_princess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_frag_baby_girl_animator"
        android:layout_alignTop="@+id/iv_frag_baby_girl"
        android:layout_alignLeft="@+id/iv_frag_baby_girl"
        android:background="@mipmap/guide_gather_chosen_light"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_frag_baby_girl_check"
        android:background="@mipmap/guide_gather_checked"
        android:layout_alignBottom="@+id/iv_frag_baby_girl"
        android:layout_alignRight="@+id/iv_frag_baby_girl"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_frag_baby_boy_show"
        android:layout_marginTop="10dp"
        android:text="小丸子"
        android:textColor="#FF5A54"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_frag_baby_boy"
        android:layout_toStartOf="@+id/iv_frag_baby_boy_check" />
    <TextView
        android:id="@+id/tv_frag_baby_girl_show"
        android:layout_marginTop="10dp"
        android:text="小公举"
        android:textColor="#FF5A54"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_frag_baby_girl"
        android:layout_toStartOf="@+id/iv_frag_baby_girl_check" />

    <Button
        android:id="@+id/btn_frag_baby_affirm"
        android:text="确认"
        android:textColor="#b4b4b4"
        android:layout_below="@+id/tv_frag_baby_girl_show"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="35dp" />



</RelativeLayout>