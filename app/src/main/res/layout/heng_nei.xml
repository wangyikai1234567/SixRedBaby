<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="250dp"
              android:background="@drawable/bg_round_rectangle_red"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/heng_nei_iv"
        android:layout_width="150dp"
        android:layout_height="150dp"
        />


    <TextView
        android:layout_width="30dp"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/heng_nei_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="aaaaaaa"
            android:textColor="@color/black"
            android:textSize="20dp"/>


        <TextView
            android:id="@+id/heng_nei_jieshao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="aaaaaaa"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/heng_nei_xianprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="9.9"
                android:textColor="@color/red"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="   "
                />

            <TextView
                android:id="@+id/heng_nei_yuanprice"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="9.9"
                android:textColor="@color/gray"/>


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.redbaby.group.view.ViewText
                android:id="@+id/twopeople"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2人团"
                android:textColor="@color/red"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/kt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/red"
                android:text="立即开团"
                android:textColor="@color/white"
                android:textSize="20dp"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>