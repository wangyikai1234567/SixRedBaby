<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:src="@mipmap/ic_launcher"
        style="@style/view1"
        />
    <ImageView
        android:id="@+id/lq_iv_main"
        android:src="@mipmap/ic_launcher"
        style="@style/view1"
        />
    <HorizontalScrollView
        style="@style/view"
        >
        <LinearLayout
            style="@style/view"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:id="@+id/pp_iv_main"
                android:src="@mipmap/ic_launcher"
                style="@style/view"
                />
            <TextView
                android:id="@+id/pp_des_main"
                android:text="AAAAA"
                style="@style/view"
                />
            <TextView
                android:id="@+id/pp_price_main"
                android:text="ssssss"
                style="@style/view"
                />
        </LinearLayout>

    </HorizontalScrollView>


</LinearLayout>
