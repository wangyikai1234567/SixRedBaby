<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


    <RelativeLayout
        android:id="@+id/rl_main"
        style="@style/view"
        >

        <ImageView
            style="@style/Mainregion"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/more_main"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:text="xxxxxx"
            android:drawableRight="@mipmap/img_more_floor"
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>
    </RelativeLayout>
    <View
        android:id="@+id/seperate_line"
       style="@style/seperate_line"
        android:layout_below="@+id/rl_main"/>

    <HorizontalScrollView
        android:layout_below="@+id/seperate_line"
        style="@style/view"
        >
        <LinearLayout
            style="@style/view"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:id="@+id/ms_iv_main"
                android:src="@mipmap/ic_launcher"
                style="@style/view"
                />
            <TextView
                android:id="@+id/price_main"
                android:text="AAAAA"
                style="@style/view"
                />
            <TextView
                android:id="@+id/old_price_main"
                android:text="ssssss"
                style="@style/view"
                />
        </LinearLayout>

    </HorizontalScrollView>





</RelativeLayout>
