<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_frag_pregnant_icon"
        android:layout_marginTop="40dp"
        android:background="@mipmap/guide_gather_pregnanted_baby_icon"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_frag_pregnant_animator"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/guide_gather_chosen_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@+id/iv_frag_pregnant_animator"
        android:layout_centerHorizontal="true"
        android:text="我怀孕了"
        android:textSize="18sp"
        android:textColor="#FF5A54"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_frag_pregnant_affirm"
        android:textColor="#a6a6a6"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_frag_pregnant_animator"
        android:layout_marginTop="50dp"
        android:text="确定"
        android:layout_width="wrap_content"
        android:layout_height="35dp" />



</RelativeLayout>